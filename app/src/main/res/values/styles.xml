<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/material_blue_500</item>
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">@dimen/textsize_normal</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

</resources>
